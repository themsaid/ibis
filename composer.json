{
    "name": "level39/ibis",
    "description": "Markdown to PDF book builder",
    "keywords": [
        "markdown",
        "book",
        "pdf",
        "php"
    ],
    "homepage": "https://github.com/level39/ibis",
    "license": "MIT",
    "authors": [
        {
            "name": "Hassan Tariq",
            "email": "devflix@outlook.com"
        }
    ],
    "bin": [
        "ibis"
    ],
    "require": {
        "illuminate/filesystem": "^7.0|^8.0",
        "illuminate/support": "^7.0|^8.0",
        "symfony/console": "^4.2|^5.0",
        "mpdf/mpdf": "^8.0",
        "spatie/commonmark-highlighter": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Ibis\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "csfix": [
            "php-cs-fixer fix src stubs --config=.php_cs"
        ],
        "csfix-review": [
            "php-cs-fixer fix src stubs --config=.php_cs --dry-run -v"
        ]
    },
    "scripts-descriptions": {
        "csfix": "Runs PHP CS Fixer to fix project files.",
        "csfix-review": "Runs PHP CS Fixer to show the details of which files are out of code standard."
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
